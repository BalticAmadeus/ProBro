{
    "name": "pro-bro",
    "displayName": "ProBro",
    "description": "VSC extension for browsing Progress DB",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:pro-bro.proBroBonjour",
        "onCommand:pro-bro.connect",
        "onView:pro-bro-databases",
        "onView:pro-bro-tables",
        "onView:pro-bro-fields",
        "onView:pro-bro-indexes"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "pro-bro",
                    "title": "OpenEdge Explorer",
                    "icon": "resources/redshift.svg"
                }
            ],
            "panel": [
                {
                    "id": "pro-bro-fields",
                    "title": "Fields Explorer",
                    "icon": "resources/redshift.svg"
                },
                {
                    "id": "pro-bro-indexes",
                    "title": "Indexes Explorer",
                    "icon": "resources/redshift.svg"
                }
            ]
        },
        "views": {
            "pro-bro-fields": [
                {
                    "type": "webview",
                    "id": "pro-bro-fields",
                    "name": "",
                    "contextualTitle": "Fields Explorer",
                    "title": "Fields Explorer"
                }
            ],
            "pro-bro-indexes": [
                {
                    "type": "webview",
                    "id": "pro-bro-indexes",
                    "name": "",
                    "contextualTitle": "Indexes Explorer",
                    "title": "Indexes Explorer"
                }
            ],
            "pro-bro": [
                {
                    "id": "pro-bro-databases",
                    "name": "DataBases",
                    "contextualTitle": "OpenEdge Explorer",
                    "title": "OpenEdge Explorer"
                },
                {
                    "id": "pro-bro-tables",
                    "name": "Tables",
                    "contextualTitle": "Tables",
                    "title": "Tables"
                }
            ]
        },
        "commands": [
            {
                "command": "pro-bro.refreshList",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "pro-bro.addEntry",
                "title": "Add",
                "icon": "$(add)"
            },
            {
                "command": "pro-bro.deleteConnection",
                "title": "Delete connection",
                "icon": "$(trash)"
            },
            {
                "command": "pro-bro.query",
                "title": "Query",
                "icon": "$(play)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "pro-bro.refreshList",
                    "when": "view == pro-bro-databases",
                    "group": "navigation"
                },
                {
                    "command": "pro-bro.addEntry",
                    "when": "view == pro-bro-databases",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "pro-bro.deleteConnection",
                    "when": "view == pro-bro-databases && viewItem == dbConnection",
                    "group": "inline"
                },
                {
                    "command": "pro-bro.query",
                    "when": "view == pro-bro-tables",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm-run-all compile:*",
        "watch": "npm-run-all -p watch:*",
        "compile:extension": "tsc -p ./",
        "compile:views": "webpack --mode development",
        "watch:extension": "tsc -watch -p ./",
        "watch:views": "webpack --watch --mode development",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "@types/react": "^18.0.12",
        "@types/react-dom": "^18.0.5",
        "@types/uuid": "^8.3.4",
        "@types/vscode": "^1.67.0",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "@vscode/test-electron": "^2.1.3",
        "css-loader": "^6.7.1",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "npm-run-all": "^4.1.5",
        "style-loader": "^3.3.1",
        "ts-loader": "^9.3.0",
        "typescript": "^4.6.4",
        "uuid": "^8.3.2",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "bootstrap": "^5.2.0",
        "export-from-json": "^1.6.0",
        "faker": "^5.5.3",
        "react": "^18.1.0",
        "react-data-grid": "^7.0.0-beta.13",
        "react-dom": "^18.1.0",
        "react-table": "^7.8.0",
        "reactjs-popup": "^2.0.5"
    }
}
