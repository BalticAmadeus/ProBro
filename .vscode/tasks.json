// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"group": "build",
	"tasks": [
		{
			"label": "Default watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "build",
				"panel": "shared",
				"clear": true,
				"close": true
			},
			"group": {
				"kind": "build",
			},
		},
		{
			"label": "Docker: Start",
			"type": "shell",
			"command": "docker-compose -f ${workspaceFolder}/docker/docker-compose.yml up",
			"group": {
				"kind": "build",
			},
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"group": "build",
				"panel": "shared",
				"clear": true,
				"close": true
			},
			"problemMatcher": {
				"owner": "docker",
				"fileLocation": [
					"relative",
					"${workspaceFolder}/docker"
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^(.*)$",
					"endsPattern": "^(.*)$"
				},
				"pattern": {
					"regexp": "^(.*)$",
					"file": 1,
					"location": 0,
					"message": 1
				}
			}
		},
		{
			"label": "Docker: Stop",
			"type": "shell",
			"command": "docker-compose -f ${workspaceFolder}/docker/docker-compose.yml down",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never",
				"group": "build",
				"panel": "shared",
				"clear": true,
				"close": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build and watch",
			"dependsOn": [
				"Default watch",
				"Docker: Start"
			]
		},
		{
			"label": "Terminate All Tasks",
			"command": "echo ${input:terminate}",
			"type": "shell",
			"problemMatcher": []
		},
		{
			"label": "Stop Docker and termanate all",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Docker: Stop",
				"Terminate All Tasks"
			]
		},
	],
	"inputs": [
		{
		  "id": "terminate",
		  "type": "command",
		  "command": "workbench.action.tasks.terminate",
		  "args": "terminateAll"
		}
	  ]
}