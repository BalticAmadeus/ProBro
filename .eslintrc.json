{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": [
            "warn",
            {
              "selector": "enumMember",
              "format": ["PascalCase"]
            }
        ],
        "@typescript-eslint/semi": "warn",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "off",
        "quotes": [1, "single", { "avoidEscape": true }]
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
